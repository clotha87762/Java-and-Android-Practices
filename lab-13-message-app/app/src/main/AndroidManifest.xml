<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="netdb.course.softwarestudio.netdbtalk" >

    <!-- Declare the permission here -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="netdb.course.softwarestudio.netdbtalk.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PostMessageActivity"
            android:label="@string/title_activity_post_mail"
            android:parentActivityName="netdb.course.softwarestudio.netdbtalk.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="netdb.course.softwarestudio.netdbtalk.MainActivity" />
        </activity>
    </application>

</manifest>
